{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
      "target": "ES2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "lib": [
          "ES2020"
      ],
      "types": ["bun"],
      "strict": true,
      "esModuleInterop": true,
      "resolveJsonModule": true,
      "forceConsistentCasingInFileNames": true,
      "checkJs": true, 
      "skipLibCheck": true
  },
  "include": [
      "src/**/**/**/**/**/**/*.ts"
  ],
  "exclude": [
      "node_modules"
  ]
}